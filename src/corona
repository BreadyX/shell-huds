#! /bin/sh

CACHE=~/.cache/corona

if { ! [ -f "$CACHE" ] ; } ||
		[ "$1" = '-f' ] ||
		[ "$(stat -c'%y' $CACHE | cut -d' ' -f1)" != "$(date +%F)" ]; then
	curl -s "https://corona-stats.online/Italy" > $CACHE
fi

grep "Italy" "$CACHE" |
	sed -E "s/\x1B\[([0-9]{1,2}(;[0-9]{1,2})?)?[m|K]//g ; s/â”‚/;/g; s/â•‘//g; s/\s+//g" |
	awk -F';' '{ print "ğŸ¦ : ğŸ˜·" $3 " ğŸ’€" $5 " â¤ï¸ " $7; }'
